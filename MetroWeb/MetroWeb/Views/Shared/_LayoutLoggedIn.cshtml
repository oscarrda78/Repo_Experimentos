@{
    Layout = null;
}




<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MetroWeb</title>
    <link rel="stylesheet" type="text/css" href="~/Content/fonts/stylesheet.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>MetroWeb</h3>
            </div>

            <ul class="list-unstyled components">
                @*<p></p>*@
                <li id="planAccionSubMenuAId" class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle dropdown-toggle-edited" >Planes de Acción</a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li>
                            <a href="@Url.Action("Index", "Problema")">Index</a>
                        </li>
                        @*<li>
                            <a href="#">Home 2</a>
                        </li>
                        <li>
                            <a href="#">Home 3</a>
                        </li>*@
                    </ul>
                </li>
                <li id="indicadoresSubMenuAId" >
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle dropdown-toggle-edited">Indicadores</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li>
                            <a href="@Url.Action("Index", "Indicador")">Index</a>
                        </li>
                        @*<li>
                            <a href="#">Index</a>
                        </li>
                        <li>
                            <a href="#">Page 3</a>
                        </li>*@
                    </ul>
                </li>
                @*<li>
                    <a href="#">otro</a>
                </li>*@
            </ul>

            <ul class="list-unstyled CTAs">

            </ul>
        </nav>

        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i id="toggleArrowId" class="fa fa-arrow-left "></i>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            @*<li class="nav-item active">
                                <a class="nav-link" href="#">Page</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                            </li>*@
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle user_menu" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                   <i class="fa fa-user-circle"></i>
                                </a>
                                <div class="dropdown-menu" style="left:auto; right:0;" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Perfil</a>
                                    @*<a class="dropdown-item" href="#">Another action</a>*@
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Cuenta")">Sign Out</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>


            <div class="container-partial">
                @RenderBody()
                <hr />
            </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @Scripts.Render("~/Scripts/js")
            <script>
                $(document).ready(function () {
                    $("#sidebar").mCustomScrollbar({
                        theme: "minimal"
                    });

                    $('#sidebarCollapse').on('click', function () {
                        $('#sidebar, #content').toggleClass('active');
                        $('.collapse.in').toggleClass('in');
                        $('a[aria-expanded=true]').attr('aria-expanded', 'false');
                        if ($("#toggleArrowId").hasClass("fa-arrow-left")) {
                            $("#toggleArrowId").removeClass("fa-arrow-left")
                            $("#toggleArrowId").addClass("fa-arrow-right")
                        }
                        else {
                            $("#toggleArrowId").removeClass("fa-arrow-right")
                            $("#toggleArrowId").addClass("fa-arrow-left")
                            
                        }
                    });
                });

                $('.js-tilt').tilt({
                    scale: 1.1
                });

            </script>
            @Scripts.Render("~/Scripts/main")
            @RenderSection("scripts", required: false)
        </div>
    </div>

</body>

</html>





